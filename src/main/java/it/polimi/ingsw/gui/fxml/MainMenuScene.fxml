<?xml version="1.0" encoding="UTF-8"?>

<!-- TODO: any way to use it in the fitWidth etc...? -->

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<StackPane xmlns:fx="http://javafx.com/fxml/1" maxHeight="-Infinity" maxWidth="-Infinity"
           minHeight="-Infinity"
           minWidth="-Infinity" prefHeight="1080.0" prefWidth="1920.0"
           xmlns="http://javafx.com/javafx/21" fx:controller="it.polimi.ingsw.gui.controllers.MainMenuSceneController"
           stylesheets="@/styles.css"
>
    <!-- Background should be placed before every other component in order to be displayed at the bottom -->
    <fx:include source="Background.fxml"/>

    <!-- Start of component content -->
    <VBox alignment="CENTER" spacing="100">
        <ImageView preserveRatio="true" fitHeight="350">
            <Image url="@/logo_big.png"/>
        </ImageView>
        <VBox alignment="CENTER" spacing="20.0">
            <Button styleClass="button" mnemonicParsing="false" onAction="#createGame">
                <graphic>
                    <VBox alignment="CENTER">
                        <Text text="New game"/>
                        <ImageView preserveRatio="true" fitWidth="300">
                            <Image url="@/big_text_decoration.png"/>
                        </ImageView>
                    </VBox>
                </graphic>
            </Button>
            <Button styleClass="button" mnemonicParsing="false" onAction="#joinGame">
                <graphic>
                    <VBox alignment="CENTER">
                        <Text text="Join game"/>
                        <ImageView preserveRatio="true" fitWidth="300">
                            <Image url="@/big_text_decoration.png"/>
                        </ImageView>
                    </VBox>
                </graphic>
            </Button>
            <Button styleClass="button" mnemonicParsing="false" onAction="#quit">
                <graphic>
                    <VBox alignment="CENTER">
                        <Text text="Quit"/>
                        <ImageView preserveRatio="true" fitWidth="150">
                            <Image url="@/big_text_decoration.png"/>
                        </ImageView>
                    </VBox>
                </graphic>
            </Button>
        </VBox>
    </VBox>


</StackPane>
