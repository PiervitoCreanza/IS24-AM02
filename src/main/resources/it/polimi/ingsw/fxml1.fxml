<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<StackPane xmlns:fx="http://javafx.com/fxml/1" fx:id="rootPane" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
           minWidth="-Infinity" prefHeight="1080.0" prefWidth="1920.0"
           xmlns="http://javafx.com/javafx/21" fx:controller="it.polimi.ingsw.GUIController">
   <ImageView fx:id="backgroundImage" fitHeight="1080.0" fitWidth="1920.0" pickOnBounds="true">
      <image>
         <Image url="@images/homeScreen/bg.png"/>
      </image>
   </ImageView>
   <VBox alignment="CENTER" spacing="20.0">
      <ImageView fx:id="foregroundImage" fitHeight="369.0" fitWidth="369.0" pickOnBounds="true" preserveRatio="true">
         <Image url="@../../../Codex_scatola+ombra.png"/>
      </ImageView>
      <Button fx:id="createGameButton" mnemonicParsing="false" onAction="#createGame" text="Create a new game"/>
      <Button fx:id="joinGameButton" mnemonicParsing="false" onAction="#switchToGamesView" text="Join game"/>
      <Button fx:id="quitButton" mnemonicParsing="false" onAction="#quit" text="Quit"/>
   </VBox>
</StackPane>
